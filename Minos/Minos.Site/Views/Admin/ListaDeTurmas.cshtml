@{
    ViewData["Title"] = "ListaDeTurmas";
    var turmas = ViewBag.Turmas;
}

<h2>ListaDeTurmas</h2>
<p class="alert-success">@TempData["Menssagem"]</p>

<div class="list">
    <table class="table table-hover">
        <thead>
        <th>Código da turma</th>
        <th>Turno</th>
        <th>Serie</th>
        <th>Grau</th>
        <th>Ações</th>
        </thead>
        @{
            foreach (var turma in turmas)
            {
                <tr>
                    <td>@turma.CodigoTurma</td>
                    <td>@turma.Turno</td>
                    <td>@turma.Serie</td>
                    <td>@turma.Grau</td>
                    <td>
                        <form action="AtualizarTurma" method="get">
                            <input type="hidden" name="id" value="@turma.Id" />
                            <input type="submit" value="Editar" class="btn btn-warning" />
                        </form>
                    </td>
                    <td>
                        <form>
                            <input type="submit" value="Desativar" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
</div>
