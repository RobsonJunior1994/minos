
@{
    ViewData["Title"] = "CadastrarUsuario";
    var mensagem = ViewData["Message"];
    var status = ViewData["Status"];
    var nomeUsuario = ViewData["NomeUsuario"];
    var colocaNome = "";
    if(ViewData["NomeUsuario"] != null)
    {
        colocaNome = "value=" + nomeUsuario +"";
    }


}

<h2>Login</h2>
<p class="@status">@mensagem</p>
<form action="\Usuario\CadastrarUsuario" method="post">
    <table>
        <tr>
            <td>Login:</td>
            <td><input type="text" name="login" @colocaNome></td>
        </tr>
        <tr>
            <td>Senha:</td>
            <td><input type="password" name="senha" /></td>
        </tr>
        <tr>
            <td>Repetir senha:</td>
            <td><input type="password" name="Repitasenha" /></td>
        </tr>
        <tr>
            <td><input type="submit" value="Entrar" id="cadastrar-usuario" /></td>
        </tr>
    </table>
</form>